
library(tidyverse)
library(ggplot2)
library(gganimate)
library(readxl)
library(patchwork)
library(scales)
setwd("/Users/muhsinciftci/Desktop/corona")
theme_set(theme_light())

corona_tr <- read_excel("corona-tr.xlsx", 
                        sheet = "cases_and_deaths")

tr_vs_ital <- read_excel("corona-tr.xlsx", 
                         sheet = "tr_vs_ital")

p1 <- ggplot(data = corona_tr)+
  geom_bar(aes(Time, Cases), stat="identity", fill = "orange")+
  ggtitle("Number of Cases, Turkey")+
  theme(legend.title = element_blank(),
        legend.position = "bottom")


p2 <- ggplot(data = corona_tr)+
  geom_bar(aes(Time, Deaths), stat="identity", fill = "brown")+
  scale_y_continuous(name = "Deaths", seq(1, max(corona_tr$Deaths), 3))+
  ggtitle("Number of Deaths, Turkey")+
  theme(legend.title = element_blank(),
        legend.position = "bottom")

myalpha <- 0.35

p3 <- ggplot(data = tr_vs_ital, aes(x = Days, y = Cases))+
  geom_area(aes(y = Turkey, fill = "Turkey"), alpha = myalpha)+
  geom_area(aes(y = Italy, fill = "Italy"), alpha = myalpha)+
  ggtitle("Turkey vs Italy, Cases")+
  theme(legend.title = element_blank(),
        legend.position = "bottom")




(p1 | p2)
ggsave("corona1-tr.png")

p3
ggsave("trvsital.png")

